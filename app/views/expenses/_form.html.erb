<%= form_for @expense, url: group_expenses_path do |form| %>
<div class="d-flex flex-column">
  <% if expense.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-2">
    <%= form.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.text_field :amount, placeholder: "Amount", class: "form-control" %>
  </div>

  <% if @groups.any? %>
    <div class="my-2">
      <%= form.label :groups, "Select Category" %>
      <%= select_tag :groups, options_for_select(@groups.map { |group| [group.name, group.id] }), multiple: true %>
    </div>
 <% end %>

  <%= form.submit "SAVE", class: "btn text-white bottomArea"%>
<% end %>
</div>