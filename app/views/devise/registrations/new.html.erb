<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="headerSignin d-flex p-2 justify-content-between mb-4">
  <%= link_to root_path, class: "mt-2" do %>
      <i class="bi bi-arrow-left text-white align-items-center "></i>
  <% end %>
  <h5 class="align-items-center mt-2">REGISTER</h5>
  <div class="actions">
    <%= f.submit "Next" , class: "btn text-white align-items-center"%>
  </div>
</div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control", placeholder: "Full Name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control", placeholder: "Password(6 characters  minimum)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control", placeholder: "Confirm Password" %>
  </div>
    
<% end %>

